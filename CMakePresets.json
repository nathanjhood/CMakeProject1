{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "windows-base",
            "description": "This build is only available on Windows",
            "hidden": true,
            "environment": {"vcpkg root": "$penv{VCPKG_ROOT}"},
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "installDir": "${sourceDir}/out/install/${presetName}",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cl.exe",
                "CMAKE_CXX_COMPILER": "cl.exe",
                "CMAKE_EXPORT_COMPILE_COMMANDS": true,
                "CMAKE_TOOLCHAIN_FILE": "$env{vcpkg root}/scripts/buildsystems/vcpkg.cmake"
            },
            "errors": {
                "deprecated": true,
                "dev": true
            },
            "warnings": {
                "deprecated": true,
                "dev": true,
                "systemVars": true,
                "unusedCli": true,
                "uninitialized": false
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "x64",
            "displayName": "x64",
            "inherits": "windows-base",
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows",
                    "intelliSenseMode": "windows-msvc-x64",
                    "enableMicrosoftCodeAnalysis": true
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"
                }
            }
        },
        {
            "name": "x86",
            "displayName": "x86",
            "inherits": "windows-base",
            "architecture": {
                "value": "x86",
                "strategy": "external"
            },
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": "Windows",
                    "intelliSenseMode": "windows-msvc-x86",
                    "enableMicrosoftCodeAnalysis": true
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {
                    "sourceDir": "$env{HOME}/.vs/$ms{projectDirName}"

                }
            }
        }
    ],
    "buildPresets": [

        {
            "name": "x64 Debug",
            "displayName": "Debug",
            "description": "x64 Debug",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x64 Release",
            "displayName": "Release",
            "description": "x64 Release",
            "configurePreset": "x64",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Debug",
            "displayName": "Debug",
            "description": "x86 Debug",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true,
            "verbose": true
        },
        {
            "name": "x86 Release",
            "displayName": "Release",
            "description": "x86 Release",
            "configurePreset": "x86",
            "configuration": "Release",
            "inheritConfigureEnvironment": true,
            "verbose": true
        }
    ],
    "testPresets": [

        {
            "name": "x64 Test",
            "displayName": "Test",
            "description": "x64 Test",
            "configurePreset": "x64",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true
        },
        {
            "name": "x86 Test",
            "displayName": "Test",
            "description": "x86 Test",
            "configurePreset": "x86",
            "configuration": "Debug",
            "inheritConfigureEnvironment": true
        }
    ]
}
